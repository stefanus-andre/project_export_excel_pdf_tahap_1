@model dynamic
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>PDF Export</title>
    <style>
        body { font-family: Arial; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #000; padding: 8px; }
        th { background-color: #eee; }
    </style>
</head>
<body>
<h1>My PDF Report</h1>
<p>Generated on @DateTime.Now.ToString("dd MMM yyyy HH:mm:ss")</p>

<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Nama</th>
        <th>Umur</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>1</td>
        <td>Stefanus</td>
        <td>29</td>
    </tr>
    </tbody>
</table>
</body>
</html>